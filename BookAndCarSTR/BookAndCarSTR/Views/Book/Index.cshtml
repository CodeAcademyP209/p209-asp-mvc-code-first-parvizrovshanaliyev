@model   IEnumerable<BookAndCarSTR.Models.Book>
@using BookAndCarSTR.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-bottom:10px; margin-top:10px; padding:10px" class=" border">
    <a class="font-weight-bold" href="~/Book/Create">Create New Book</a>
</div>
<h2>book controller</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Post Id</th>
            <th scope="col">Post Name</th>
            <th scope="col">Post description</th>
            <th scope="col">Post Price</th>
            <th scope="col">Post Year</th>
            <th scope="col">Post Author</th>
            <th scope="col">Post Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Year</td>
                <td>@item.Author</td>
                <td><img width="120px" src="~/Images/@(item.Image != null ?"Books/"+item.Image:"No_Image.jpg")" alt="Card image cap"></td>
            </tr>

        }

    </tbody>
</table>


